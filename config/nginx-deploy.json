                        {
                            "readOnly": true,
                            "containerPath": "\/sys",
                            "sourceVolume": "sys"
                        },
                        {
                            "readOnly": true,
                            "containerPath": "\/sys\/fs\/cgroup",
                            "sourceVolume": "cgroup"
                        },
                        {
                            "readOnly": true,
                            "containerPath": "\/var\/lib\/docker",
                            "sourceVolume": "var_lib_docker"
                        }
                    ],
                    "essential": true,
                    "memory": 200,
                    "cpu": 128,
                    "image": "wen777\/snap:alpine",
                    "name": "snap"
                }
            ],
            "family": "snap"
        },
        {
            "volumes": [],
            "containerDefinitions": [
                {
                    "environment": [
