        },
        {
            "task": "snap",
            "id": 1
        },
        {
            "task": "locust-master",
            "id": 2
        },
        {
            "count": 2,
            "task": "locust-slave",
            "id": 2
        }
    ],
    "clusterDefinition": {
        "nodes": [
            {
                "instanceType": "t2.medium",
                "id": 1
            },
            {
                "instanceType": "t2.medium",
                "id": 2
            }
        ]
    },
    "taskDefinitions": [
