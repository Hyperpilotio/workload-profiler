                {
                    "host": {
                        "sourcePath": "\/var\/run"
                    },
                    "name": "var_run"
                },
                {
                    "host": {
                        "sourcePath": "\/var\/log"
                    },
                    "name": "var_log"
                },
                {
                    "host": {
                        "sourcePath": "\/sys"
                    },
                    "name": "sys"
                },
                {
                    "host": {
                        "sourcePath": "\/var\/lib\/docker\/"
